@model school.dtos.AbsentCelander
@{
    ViewData["Title"] = "Table";
}


<h2 style="text-align:center">كشف أسماء غياب الطُلاب</h2>

<div id="absentPaper">
    <div style="margin-top: 20px; font-family: 'Amiri', serif; font-size: 10px; text-align: center;">
        <!--Edit the names-->

        <h1>اسمُ المَدرسةِ : الحديثة</h1>
        <h1>الصفُ الدراسيٌّ : الثاني</h1>
        <h1>الفصلُ : الأول</h1>
        <h2>لشهر : @ViewBag.Month</h2>
    </div>

    <h1 style="text-align: center; margin-top: 40px; font-family: 'Amiri', serif; font-size: 30px;">أسماءُ غيابِ الطُلابِ </h1>

    <div id="printableDiv">
        <style>
            /*This is properities of table*/

            table, th, td {
                padding: 10px;
                border: 1px solid black;
                border-collapse: collapse;
            }

            th {
                height: 10px;
                width: 30px;
            }
        </style>
    </div>

    <table style="width: 100%; margin-left:auto; margin-right:auto;" border="1">

        <thead style="background-color: #dfe4ea;">
            <tr>

                <th width="25%" style="text-align:center;">اسم الطالب</th>

                @for (int i = 1; i <= Model.NumOfDay; i++)
                {
                    if (Model.startDate.DayOfWeek == DayOfWeek.Saturday)
                    {
                        <th>س</th>
                    }
                    if (Model.startDate.DayOfWeek == DayOfWeek.Sunday)
                    {
                        <th>ح</th>
                    }
                    if (Model.startDate.DayOfWeek == DayOfWeek.Monday)
                    {
                        <th>ن</th>
                    }
                    if (Model.startDate.DayOfWeek == DayOfWeek.Tuesday)
                    {
                        <th>ث</th>
                    }
                    if (Model.startDate.DayOfWeek == DayOfWeek.Wednesday)
                    {
                        <th>ع</th>
                    }
                    if (Model.startDate.DayOfWeek == DayOfWeek.Thursday)
                    {
                        <th>خ</th>
                    }
                    if (Model.startDate.DayOfWeek == DayOfWeek.Friday)
                    {
                        <th>ج</th>

                    }

                    Model.startDate = Model.startDate.AddDays(1);

                }
            </tr>

        </thead>
        <tbody style="text-align: center;">
            @for (int i = 0; i < Model.Students.Length; i++)
            {
                <tr>
                    <td style="text-align: center; font-weight:bold;">@Model.Students[i]</td>

                @for (int j = 0; j < Model.NumOfDay; j++)
                    {
                    if (Model.absentMat[i, j] != null)
                    {
                        if (Model.absentMat[i, j].Value)
                        {
                            <td style="font-weight:bold;">غ</td>
                        }
                        if (!Model.absentMat[i, j].Value)
                        {
                            <td style="font-weight:bold;">ح</td>
                        }
                    }
                    else
                    {
                        <td style="font-weight:bold;">_</td>

                    }
                }





                </tr>
            }
        </tbody>
    </table>
    <br>
    <br />
</div>

<input value="اطبع" class="btn btn-danger" onclick="return print('absentPaper')" type="button" tabindex="1"
       style="margin-left:1%; width:140px; background-color:#0984e3; color:#FFFFFF; cursor:pointer;
            font-size:16px; border: solid 2px #0984e3; border-radius:10px;" />

