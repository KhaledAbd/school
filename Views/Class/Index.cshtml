@model IEnumerable<Class>
@{
    ViewData["Title"] = "الفصول";
}

<nav class="navbar navbar-expand-sm navbar-dark justify-content-center">
    <ul class="navbar-nav">
        <li class="nav-item list-inline-item">
            <a class="nav-link" href="/Home/Index">
                <div class="leftIcon">
                    <i class="fas fa-home" title="الصفحةُ الرئيسية"></i>
                </div>
            </a>
        </li>
        <li class="nav-item list-inline-item">
            <a class="nav-link" href="/Stage/Index">
                <div class="rightIcon">
                    <i class="fas fa-university" title="السنواتُ الدراسيّة"></i>
                </div>
            </a>
        </li>
    </ul>
</nav>

<div class="row2">
    @foreach (var cls in Model)
    {
        <a asp-action="Index" asp-controller="Student" asp-route-id="@cls.Id" onclick="setClass(@cls.Id, @cls.Name)" asp- title="الفصل @cls.Name\1">@cls.Stage\@cls.Name</a>
    }
</div>

<div class="classes-op">
    <a class="add-new-class" asp-action="Create" asp-controller="Class">اضافةُ فصلٍ</a>
    <a class="edit-class" asp-action="ListClass" asp-controller="Class">تعديلُ فصلٍ</a>
</div>

<link rel="stylesheet" href="~/css/styleClasses.css" />
<script src="~/js/custom-classes.js"></script>
